{% extends 'base.html.twig' %}

{% block title %}Categories
{% endblock %}

{% block body %}
	<h1>The categories</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Name</th>
				<th>description</th>
			</tr>
		</thead>
		<tbody>
			{% for category in categories %}
				<tr>
					<td>
						<a href="{{ path("app_category_show", {"category" : category.id }) }} ">{{ category.name }}</a>
					</td>
					<td>{{ category.description }}</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="5">no categories found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

{% endblock %}
